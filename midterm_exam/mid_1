//write a c program to find the area and perimeter of a triangle.
#include<stdio.h>
#include<math.h>

int main(){
    float a,b,c,s,v,area;

    printf("Enter the value of three num :");
    scanf("%f%f%f",&a,&b,&c);

    s=a+b+c;
    v=s/2;
    area=sqrt(v*(v-a)*(v-b)*(v-c));

    printf("area=%f \n s=%f",area,s);

    return 0;
}
